@using AngularBlazor.UI.Client.Services
@inject MessagesService Service

    @if (List.Any())
    {
        <div class="messages">
            <h2>Messages</h2>
            <button class="clear" onclick="@Clear">clear</button>
            @foreach (var message in List)
            {
                <div>@message</div>
            }
        </div>
    }

@functions {

    IReadOnlyList<string> List;

    protected override void OnInit()
    {
        this.List = Service.Messages;
    }

    private void Clear()
    {
        Console.WriteLine("Cleared messages");
        this.Service.Clear();
    }

}
